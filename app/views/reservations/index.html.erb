<h1>Listing reservations</h1>

<table>
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Shuttle</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.first %></td>
    <td><%= reservation.last %></td>
    <td><%= reservation.email %></td>
    <td><%= reservation.phone %></td>
    <td><%= reservation.shuttle_id %></td>
    <td><%= reservation.location_id %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

