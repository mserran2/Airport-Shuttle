<h1>New reservation</h1>
<div class="page_container">
	<div class="new_reservation">
		<div class="res_header">Select A Shuttle</div>
		<div class="tabs">
			<% @days.each do |day| %>
			<div class="tab<%= " selected" if @days.first == day %>" data-date="<%= day.date.strftime("%Y%m%d") %>"><%= day.date.strftime("%b %d") %></div>
			<% end %>
		</div>
		<div class="res_body">
		<%= render "shuttles/shuttles_by_day" %>
		</div>
	</div>
	<div class="selections">
		<div class="sel_header">Confirm</div>
		<div class="sel_form">
			<div class="sel_info">
				You Selected:
				<div class="sub_info">
				Shuttle #: <span id="shuttlenum"></span><br />
				Departs: <span id="shuttledep"></span>
				</div>
			</div>
			<%= render 'form' %>
		</div>
	</div>
</div>
	

<%= link_to 'Back', reservations_path %>

